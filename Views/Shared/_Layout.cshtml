@{
    ViewBag.Title = "Nowhere.luv - Tu Destino de Moda";
}

<!DOCTYPE html>
<html style="height: 100%;">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="min-height: 100%; margin: 0; padding: 0; display: flex; flex-direction: column;">
    <div class="container-fluid" style="flex: 1; display: flex;">
        <nav class="navbar col-md-2 d-md-block bg-dark sidebar" >
            <div class="container">
                @Html.ActionLink("Nowhere.luv", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color: purple; font-weight: bold; font-size: 21px;" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-column">
                        <li>@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link", style = "color: blue; font-family:" })</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link ", style = "color: blue; font-family:" })</li>
                        <li>@Html.ActionLink("Clientes", "Index", "Users", new { area = "" }, new { @class = "nav-link ", style = "color: pink; font-family: " })</li>
                        <li>@Html.ActionLink("Proveedores", "Index", "Suppliers", new { area = "" }, new { @class = "nav-link", style = "color: pink; font-family:" })</li>
                        <li>@Html.ActionLink("Ventas", "Index", "Sales", new { area = "" }, new { @class = "nav-link ", style = "color: pink; font-family: " })</li>
                        <li>@Html.ActionLink("Compras", "Index", "Purchases", new { area = "" }, new { @class = "nav-link ", style = "color: pink; font-family: " })</li>
                        <li>@Html.ActionLink("Movimientos", "Index", "Inventory_movements", new { area = "" }, new { @class = "nav-link", style = "color: pink; font-family: " })</li>
                        <li>@Html.ActionLink("Inventario", "Index", "Inventories", new { area = "" }, new { @class = "nav-link ", style = "color: pink; font-family: " })</li>
                    </ul>
                </div>
            </div>
        </nav>

        <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4" style="flex: 1;">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
                </footer>
            </div>
        </main>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
