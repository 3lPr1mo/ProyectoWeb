@model IEnumerable<ProyectoWeb.Models.Inventory_movements>

@{
    ViewBag.Title = "Movimientos";
}

<h2 class="text-center mb-4">Movimientos</h2>


<table class="table  table-hover" ">
    <tr class="text-center " style="background-color: dimgray;">
        <th class="text-white">
            TIPO DE MOVIMIENTO
        </th>
        <th class="text-white">
            CANTIDAD MOVIDA
        </th>
        <th class="text-white">
            ID PRODUCTO
        </th>
        <th class="text-white">
            NOMBRE
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr  class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.type_movement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity_moved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory.name)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.movement_id }, new { @class = "btn btn-outline-info " })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary " })
</p>